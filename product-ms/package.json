{
  "name": "product-ms",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate2": "npm run typeorm migration:generate -- -d ./src/common/data-access/data-source.ts src/common/database/migrations/Initial",
    "migration:run": "npm run typeorm migration:run -- -d ./src/common/data-access/data-source.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/common/data-access/data-source.ts",
    "migration:generate": "ts-node ./scripts/generate-migration.ts",
    "seed": "ts-node -r tsconfig-paths/register src/seeds/index.ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "8",
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "http": "^0.0.1-security",
    "kafkajs": "^2.2.4",
    "mysql2": "^3.14.3",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.26",
    "typescript": "^5.9.2",
    "zod": "^4.1.5"
  }
}
