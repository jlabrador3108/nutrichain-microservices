generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "mongodb"
    url       = env("MONGODB_URI")
}

model Warehouse {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    location  Location
    manager   String?
    stocks    Stock[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

type Location {
    address String?
    lat     Float?
    lon     Float?
}

model Stock {
    id          String    @id @default(auto()) @map("_id") @db.ObjectId
    productSku  String
    warehouseId String    @db.ObjectId
    quantity    Int       @default(0)
    updatedAt   DateTime  @updatedAt
    warehouse   Warehouse @relation(fields: [warehouseId], references: [id])

    @@unique([productSku, warehouseId])
}

model Movement {
    id              String       @id @default(auto()) @map("_id") @db.ObjectId
    productSku      String
    quantity        Int
    type            MovementType
    fromWarehouseId String?      @db.ObjectId
    toWarehouseId   String?      @db.ObjectId
    note            String?
    createdAt       DateTime     @default(now())
}

enum MovementType {
    IN
    OUT
    TRANSFER
    RETURN
    ADJUST_POSITIVE
    ADJUST_NEGATIVE
}
