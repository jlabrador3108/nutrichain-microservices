generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI")
}

enum Status {
    PENDING
    CONFIRMED
    CANCELLED
}

model Order {
    id       String      @id @default(auto()) @map("_id") @db.ObjectId
    customer String
    date     DateTime
    items    OrderItem[]
    status   Status      @default(PENDING)
}

model OrderItem {
    id         String  @id @default(auto()) @map("_id") @db.ObjectId
    productSku String
    quantity   Int
    Order      Order?  @relation(fields: [orderId], references: [id])
    orderId    String? @db.ObjectId
}
